<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--
        VISTAS DE CONFIGURACIÓN PARA Operaciones Logísticas
        =============================================

        Este archivo hereda las vistas de pos.config del POS y las adapta
        para mostrar los campos adicionales de Operaciones Logísticas.

        Estrategia:
        - Heredamos las vistas existentes usando inherit_id
        - Agregamos los campos identificadores
        - NO duplicamos toda la vista, solo extendemos
        -->

        <!-- Vista de Formulario: Agregar campos de identificación -->
        <record id="view_pos_config_form_logistic_operations" model="ir.ui.view">
            <field name="name">pos.config.form.logistic_operations</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <!-- Agregamos un grupo al final del sheet con los campos de Operaciones Logísticas -->
                <xpath expr="//sheet/div[@class='row mt16 o_settings_container']" position="after">
                    <group string="Configuración de Vehículo" name="logistic_operations_vehicle" invisible="x_is_logistic_operations == False">
                        <group>
                            <field name="x_vehicle_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="x_vehicle_license_plate" readonly="1" invisible="not x_vehicle_id"/>
                        </group>
                        <group>
                            <p colspan="2" class="text-muted">
                                Seleccione el vehículo que será asignado por defecto
                                a las sesiones de esta configuración. Los conductores
                                podrán cambiarlo al iniciar sesión si es necesario.
                            </p>
                        </group>
                    </group>
                    <group string="Identificación: Operaciones Logísticas" name="logistic_operations_info">
                        <group>
                            <field name="x_is_logistic_operations" readonly="1"/>
                            <field name="x_source_module" readonly="1"/>
                        </group>
                        <group>
                            <p colspan="2" class="text-muted">
                                Estos campos identifican si esta configuración pertenece
                                al módulo "Operaciones Logísticas" o al "Point of Sale" normal.
                                Las configuraciones creadas desde el menú de Operaciones Logísticas
                                se marcan automáticamente.
                            </p>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Vista de Árbol/Lista: Agregar columnas de identificación -->
        <record id="view_pos_config_tree_logistic_operations" model="ir.ui.view">
            <field name="name">pos.config.tree.logistic_operations</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_config_tree"/>
            <field name="arch" type="xml">
                <!-- Agregamos columnas para mostrar el origen -->
                <xpath expr="//tree/field[@name='name']" position="after">
                    <field name="x_source_module" optional="show"/>
                </xpath>
            </field>
        </record>

        <!-- Vista de Búsqueda: Agregar filtros para Operaciones Logísticas -->
        <record id="view_pos_config_search_logistic_operations" model="ir.ui.view">
            <field name="name">pos.config.search.logistic_operations</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_config_search"/>
            <field name="arch" type="xml">
                <!-- Agregamos filtros para separar por módulo de origen -->
                <xpath expr="//search/filter[@name='inactive']" position="after">
                    <separator/>
                    <filter string="Operaciones Logísticas" name="logistic_operations_only"
                            domain="[('x_is_logistic_operations', '=', True)]"
                            help="Mostrar solo configuraciones de Operaciones Logísticas"/>
                    <filter string="POS Normal" name="pos_only"
                            domain="[('x_is_logistic_operations', '=', False)]"
                            help="Mostrar solo configuraciones del POS normal"/>
                    <separator/>
                    <group expand="0" string="Agrupar por">
                        <filter string="Módulo de Origen" name="group_by_source_module"
                                context="{'group_by': 'x_source_module'}"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Vista Kanban heredada para Operaciones Logísticas -->
        <record id="view_pos_config_kanban_logistic_operations" model="ir.ui.view">
            <field name="name">pos.config.kanban.logistic_operations</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_config_kanban"/>
            <field name="arch" type="xml">
                <!-- Agregar campo invisible para detectar Operaciones Logísticas -->
                <xpath expr="//field[@name='number_of_rescue_session']" position="after">
                    <field name="x_is_logistic_operations"/>
                </xpath>

                <!-- Ocultar botón original para Operaciones Logísticas -->
                <xpath expr="//button[@name='open_ui']" position="attributes">
                    <attribute name="invisible">x_is_logistic_operations</attribute>
                </xpath>

                <!-- Agregar botón personalizado para Operaciones Logísticas -->
                <xpath expr="//button[@name='open_ui']" position="after">
                    <button t-if="record.x_is_logistic_operations.raw_value &amp;&amp; record.current_session_state.raw_value != 'closing_control'"
                            class="btn btn-primary"
                            name="open_logistic_operations_ui"
                            type="object">
                        <t t-if="record.current_session_state.raw_value === 'opened'">Continuar Operación</t>
                        <t t-elif="!record.current_session_id.raw_value &amp;&amp; !record.pos_session_username.value">Nueva Sesión LSO</t>
                        <t t-elif="record.current_session_state.raw_value === 'opening_control'">Abrir Sesión LSO</t>
                    </button>
                </xpath>
            </field>
        </record>

        <!-- Acción de Ventana para Configuraciones de Operaciones Logísticas -->
        <record id="action_logistic_operations_config" model="ir.actions.act_window">
            <field name="name">Configuraciones Operaciones Logísticas</field>
            <field name="res_model">pos.config</field>
            <field name="view_mode">tree,form</field>
            <!-- Dominio: Solo mostrar configuraciones de Operaciones Logísticas -->
            <field name="domain">[('x_is_logistic_operations', '=', True)]</field>
            <!-- Contexto: Marcar automáticamente nuevas configs como Operaciones Logísticas -->
            <field name="context">{
                'default_x_is_logistic_operations': True,
                'default_x_source_module': 'logistic_operations',
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear una nueva configuración de Operaciones Logísticas
                </p>
                <p>
                    Las configuraciones de Operaciones Logísticas funcionan igual que las del POS,
                    pero se marcan automáticamente para identificar su origen.
                    <br/><br/>
                    Los registros creados desde estas configuraciones (sesiones, órdenes)
                    heredarán el marcado de Operaciones Logísticas.
                </p>
            </field>
        </record>

    </data>
</odoo>
